<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DHwD.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Hello, please enter your nickname." VerticalOptions="Center" HorizontalOptions="CenterAndExpand"/>
        <StackLayout Orientation="Horizontal">
            <Label Text="NickName" VerticalOptions="Center" HorizontalOptions="Center" Margin="8,0,0,0"/>
            <Entry WidthRequest="300" Text="{Binding user.NickName}" BackgroundColor="{Binding NickNameColor}"/>
        </StackLayout>
        <Button Command="{Binding LoginCommand}" Text="Login" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" WidthRequest="300" CornerRadius="50"/>
    </StackLayout>

</ContentPage>