<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DHwD.Views.MainPage"
             Title="{Binding Title}"
             BackgroundColor="#c3c3c3"
             NavigationPage.HasNavigationBar="False">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" >
        <Image Source="ic_launcher.png" VerticalOptions="Center" HorizontalOptions="Center" Margin="20"/>
        <Label Text="Hello, please enter your nickname." VerticalOptions="Center" HorizontalOptions="CenterAndExpand" BackgroundColor="#e7121d"/>
        <Frame CornerRadius="50" Margin="10" BorderColor="Black" >
            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <StackLayout Orientation="Horizontal">
                    <Label Text="NickName" VerticalOptions="Center" MinimumWidthRequest="100" HorizontalOptions="Center" Margin="8,0,0,0"/>
                    <Entry WidthRequest="300" Text="{Binding user.NickName}" BackgroundColor="{Binding NickNameColor}"/>
                </StackLayout>
                <Button Command="{Binding LoginCommand}" Text="Login" VerticalOptions="Center" Margin="0,15,0,15" HorizontalOptions="CenterAndExpand" 
                WidthRequest="300" CornerRadius="50" BackgroundColor="#7f7f7f"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>